<h1>Listing hardwares</h1>

<%= link_to 'New hardware', new_hardware_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Purpose</th>
  </tr>

  <% @hardwares.each do |hardware| %>
    <tr>
      <td><%= hardware.name %></td>
      <td><%= hardware.description %></td>
      <td><%= hardware.price %></td>
      <td><%= hardware.purpose %></td>
      <td><%= link_to 'Show', hardware_path(hardware) %></td>
    </tr>
  <% end %>
</table>
