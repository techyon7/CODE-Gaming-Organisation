<div id="particles-js"></div>
<div class="form-container">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-field", placeholder: "Email Address" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class:"text-field", placeholder: "Password"%>
    </div>
       
    <div class="password-link">
     <%= link_to "Forgot your password?", new_user_password_path %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-box">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-success", id:"register-btn" %>
    </div>


  <% end %>

  <%# render "devise/shared/links" %>
</div>